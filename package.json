{
  "name": "audit-local",
  "version": "2.0.0",
  "description": "Local file explorer with admin panel and file management capabilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.audit.local",
    "productName": "Audit Local File Explorer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist",
      "!node_modules",
      "sample-folder/**/*"
    ],
    "extraResources": [
      {
        "from": "sample-folder",
        "to": "sample-folder"
      }
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "highestAvailable"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "category": "Utility"
    }
  },
  "keywords": ["file-explorer", "admin-panel", "electron", "file-management"],
  "author": "Nisou624",
  "license": "ISC",
  "devDependencies": {
    "electron": "^latest",
    "electron-builder": "^latest"
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  }
}

