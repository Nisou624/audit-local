{
  "name": "audit-local",
  "version": "2.1.0",
  "description": "Local file explorer with admin panel and file management capabilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "install-deps": "npm install"
  },
  "build": {
    "appId": "com.audit.local",
    "productName": "Audit Local File Explorer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist",
      "!node_modules",
      "sample-folder/**/*"
    ],
    "extraResources": [
      {
        "from": "sample-folder",
        "to": "sample-folder"
      }
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "highestAvailable"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "category": "Utility"
    }
  },
  "keywords": [
    "file-explorer",
    "admin-panel",
    "electron",
    "file-management"
  ],
  "author": "Nisou624",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "csv-parser": "^3.2.0",
    "mammoth": "^1.11.0",
    "pdf-parse": "^1.1.3",
    "xlsx": "^0.18.5"
  }
}
