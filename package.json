{
  "name": "audit-local",
  "version": "1.0.0",
  "description": "Local file explorer with glass UI and security features",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "file-explorer",
    "glass-ui",
    "security"
  ],
  "author": "Your Company",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "mammoth": "^1.5.1",
    "xlsx": "^0.18.5",
    "csv-parser": "^3.0.0"
  },
  "build": {
    "appId": "com.company.audit-local",
    "productName": "Audit Local Explorer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}

